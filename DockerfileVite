FROM node:20-alpine as builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy application code
COPY . .

# Build if needed (uncomment if you need to build)
# RUN npm run build

# Final stage
FROM node:20-alpine

WORKDIR /var/www/app

# Create non-root user
RUN addgroup -g 1000 nodeuser && \
    adduser -u 1000 -G nodeuser -s /bin/sh -D nodeuser

# Copy node modules and built assets from builder
COPY --from=builder --chown=nodeuser:nodeuser /app/node_modules /var/www/app/node_modules
COPY --chown=nodeuser:nodeuser . .

# Set proper permissions
RUN chown -R nodeuser:nodeuser /var/www/app

# Use non-root user for better security
USER nodeuser

# Add healthcheck
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
    CMD wget -q -O - http://localhost:5173 || exit 1

# Expose Vite dev server port
EXPOSE 5173

# Start Vite server with host set to allow external connections
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
