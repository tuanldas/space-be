                  "if (response.expires_in) {",
                  "    const expiryTime = new Date();",
                  "    expiryTime.setSeconds(expiryTime.getSeconds() + response.expires_in);",
                  "    pm.collectionVariables.set('token_expiry', expiryTime.getTime().toString());",
